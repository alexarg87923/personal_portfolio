{
  "name": "personal-portfolio",
  "version": "0.0.0",
  "scripts": {
    "run:prod": "node ./dist/portfolio/server/server.mjs",
    "run:dev": "npx nodemon dist/portfolio/server/server.mjs --watch dist/portfolio/server/server.mjs",
    "build:dev:angular": "ng run portfolio:build:development --watch",
    "build:prod:angular": "ng run portfolio:build:production",
    "start:dev": "concurrently --kill-others-on-fail --prefix \"[{name}]\" --prefix-colors \"cyan,magenta\" --names \"ANGULAR,SERVER\" \"npm run build:dev:angular\" \"npx wait-on file:dist/portfolio/server/server.mjs && npm run run:dev\"",
    "start:prod": "npm run build:prod:angular && npm run build:prod:node && npm run run:prod"
  },
  "private": true,
  "dependencies": {
    "@angular/compiler": "^19.2.5",
    "@angular/platform-server": "^19.2.0",
    "@angular/ssr": "^19.2.5",
    "bcryptjs": "^3.0.2",
    "connect-redis": "^8.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "pg": "^8.14.1",
    "redis": "^4.7.0",
    "rxjs": "~7.8.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.5",
    "@angular/cli": "^19.2.5",
    "@angular/common": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.14",
    "@angular/material": "^19.2.7",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.1",
    "@types/node": "^18.18.0",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.2.1",
    "daisyui": "^5.0.52",
    "esbuild": "^0.25.9",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "wait-on": "^8.0.4",
    "zone.js": "^0.15.0"
  }
}
