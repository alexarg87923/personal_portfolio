{
  "name": "portfolio",
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently -n \"Back-end,Front-end\" -c \"cyan,green\" \"npm run start:back-end\" \"npm run start:front-end\"",
    "start:back-end": "npm run build && node dist/portfolio/server/server.mjs",
    "start:front-end": "ng serve",
    "build": "ng build --configuration production && cp -r ./init_data_scripts/ ./dist/portfolio/server/init_data_scripts/ && cp -r ./tables/ ./dist/portfolio/server/tables/",
    "serve": "node ./dist/portfolio/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/cdk": "^17.3.9",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/material": "^17.3.9",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/platform-server": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/ssr": "^17.3.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-redis": "^8.0.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-session": "^1.18.1",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.7",
