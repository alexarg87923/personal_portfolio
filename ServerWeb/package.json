    "@angular/compiler-cli": "^17.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@types/pg": "^8.11.6",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "daisyui": "^4.11.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
